class Solution{
    public:
     
    long long maxSubarraySum(int arr[], int n){
        
        long long  sum=0;
        long long mxsum=arr[0];
        
        for(int i=0; i<n ; i++){
            sum+=arr[i];
            mxsum=max(mxsum , sum);
            
            if(sum<0){
                sum=0;
            }
        }
        
        return mxsum;
        
    }
};
