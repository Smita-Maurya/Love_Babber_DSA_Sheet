int mod= 1e9+7;
class Solution {
  public:
    long long int countBT(int h) { 
       
        if(h==0 || h==1){
            return h;
        }
        vector<long long int>dp(h+1 , 0);
        dp[1]=1;
        dp[2]=3;
        for(int i=3 ; i<=h ; i++){
            dp[i]= (dp[i-1]*(2*dp[i-2]+dp[i-1])%mod)%mod;
        }
        return dp[h]%mod;
    }
};
